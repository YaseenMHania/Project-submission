<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCoursuActivity">


    <EditText
        android:id="@+id/ed_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Title"
        android:textSize="20sp"
        android:layout_margin="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/ed_Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Description"
        android:textSize="20sp"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/ed_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <EditText
        android:id="@+id/ed_Instructor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Instructor"
        android:textSize="20sp"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/ed_Description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <EditText
        android:id="@+id/ed_NumberOfStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your NumberOfStudent"
        android:textSize="20sp"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/ed_Instructor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <EditText
        android:id="@+id/ed_CountHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your CountHours"
        android:textSize="20sp"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/ed_NumberOfStudent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/ed_Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Price"
        android:textSize="20sp"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/ed_CountHours"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/btn_add_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Add course"/>




</androidx.constraintlayout.widget.ConstraintLayout>